<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/epidemic_data_row_height"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@color/primary"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/country_data_row_text_country"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="国家"
        android:textColor="@color/textToolBar"
        android:textSize="@dimen/epidemic_data_header_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/country_data_row_text_confirmed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:text="确诊"
        android:textColor="@color/textToolBar"
        android:textSize="@dimen/epidemic_data_header_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/country_data_row_text_cured"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:text="治愈"
        android:textColor="@color/textToolBar"
        android:textSize="@dimen/epidemic_data_header_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/country_data_row_text_dead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:text="死亡"
        android:textColor="@color/textToolBar"
        android:textSize="@dimen/epidemic_data_header_text_size"
        android:textStyle="bold" />

</LinearLayout>